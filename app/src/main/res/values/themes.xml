<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CRM" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/matte_orange</item>
        <item name="colorPrimaryVariant">@color/matte_orange_dark</item>
        <item name="colorOnPrimary">@color/light_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/black_overlay</item>
        <item name="colorOnSecondary">@color/light_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/matte_dark_grey</item>
        <item name="android:textColorPrimary">@color/light_white</item>
    </style>

    <style name="Theme.CRM.Fullscreen" parent="Theme.CRM">
        <item name="android:actionBarStyle">@style/Widget.Theme.CRM.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.CRM.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>