<resources>
    <style name="Widget.Theme.CRM.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.CRM.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="BottomNavBarStyle">
        <item name="android:background">@color/matte_med_grey</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:textColor">@color/light_white</item>
    </style>

    <style name="NavTextAppearance">
        <item name="android:textColor">@color/light_white</item>
    </style>

    <style name="TopAppBarStyle">
        <item name="android:background">@color/matte_black</item>
        <item name="android:titleTextStyle">@style/TitleTextAppearance</item>
        <item name="android:navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="MeetingsButtons">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textSize">10sp</item>
<!--        <item name="android:textColor">@color/matte_black</item>-->
<!--        <item name="android:iconTint">@color/matte_black</item>-->
    </style>

    <style name="MeetingsListItemsText">
        <item name="android:textColor">@color/light_white</item>
    </style>

    <style name="ContactListItemsText">
        <item name="android:textColor">@color/light_white</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/light_white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/light_white</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/light_white</item>

    </style>

</resources>