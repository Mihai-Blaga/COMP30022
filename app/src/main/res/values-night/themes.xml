<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CRM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/matte_orange</item>
        <item name="colorPrimaryVariant">@color/matte_orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/matte_dark_grey</item>
        <item name="colorSecondaryVariant">@color/matte_dark_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.CRM.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/matte_dark_grey</item>
        <item name="fullscreenTextColor">@color/matte_dark_grey</item>
    </style>
</resources>